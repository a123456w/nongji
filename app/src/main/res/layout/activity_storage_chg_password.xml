<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    tools:context="com.guo.qlzx.nongji.service.activity.PersonalCenterActivity">
    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_originalped"
                android:layout_marginRight="14dp"
                android:layout_width="19dp"
                android:layout_height="18dp" />

            <EditText
                android:id="@+id/et_originalpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入原密码"
                android:password="true"
                android:textSize="13sp" />
        </LinearLayout>
        <View
            android:background="#efefef"
            android:layout_marginLeft="17dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_pwd"
                android:layout_marginRight="14dp"
                android:layout_width="19dp"
                android:layout_height="18dp" />

            <EditText
                android:id="@+id/et_newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入新密码"
                android:password="true"
                android:textSize="13sp" />
        </LinearLayout>
        <View
            android:background="#efefef"
            android:layout_marginLeft="17dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_pwd"
                android:layout_marginRight="14dp"
                android:layout_width="19dp"
                android:layout_height="18dp" />

            <EditText
                android:id="@+id/et_againpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:password="true"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_affirm"
        android:background="#ffffff"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="确认"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        />
</LinearLayout>
