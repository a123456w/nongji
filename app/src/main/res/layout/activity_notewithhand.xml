<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:context="com.guo.qlzx.nongji.client.activity.NotewithhandActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="198dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/ic_notebackgrouds"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp">


                    <TextView
                        android:id="@+id/tv_riqi"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#fff"
                        />

                <RelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="32dp"
                    android:layout_height="20dp">

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="16dp"
                        android:layout_height="9dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp" />
                </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_end_riqi"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#fff"
                        />


                <RelativeLayout
                    android:id="@+id/rl_right"
                    android:layout_width="32dp"
                    android:layout_height="20dp">
                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="16dp"
                    android:layout_height="9dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="22dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="本月支出 ："
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                          android:id="@+id/tv_zhichu"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="111"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight="1">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="本月收入 ："
                        android:textColor="#fff"
                        android:gravity="center"
                       android:layout_gravity="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_shouru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="1111"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="11dp">

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="利润 ："
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_lirun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="7777"
                    android:gravity="center"
                    android:textColor="#fff" />


            </LinearLayout>

            <Button
                android:id="@+id/but_remember"
                android:layout_width="298dp"
                android:layout_height="39dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:background="#ffffff"
                android:text="记一笔"
                android:textSize="15sp" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/re_cycle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_three"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
