<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/bg_shadow"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_card_type"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="卡类型："
            android:textSize="15sp"
            android:textColor="@color/textcolor3"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:background="@color/white"
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/textcolor3"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_phone_red"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="手机号："
            android:textSize="15sp"
            android:textColor="@color/textcolor3"/>
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:background="@color/white"
            android:lines="1"
            android:inputType="number"
            android:textSize="15sp"
            android:textColor="@color/textcolor3"
            android:textColorHint="@color/textcolor9"
            android:hint="银行卡预留手机号"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_suo"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="验证码："
            android:textSize="15sp"
            android:textColor="@color/textcolor3"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:lines="1"
            android:inputType="numberPassword"
            android:textSize="15sp"
            android:textColor="@color/textcolor3"
            android:textColorHint="@color/textcolor9"
            android:hint="请输入验证码"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="点击获取"
            android:textColor="@color/send_code"
            android:layout_marginRight="13dp"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="完成"
        android:background="@drawable/shape_red_org_three"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="31dp"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>