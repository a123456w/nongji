<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="71dp"
        android:layout_marginRight="71dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_liannong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13.3dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tell" />

        <EditText


            android:id="@+id/et_tell"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10.7dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:inputType="phone"
            android:textColor="@color/textcolor3"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13.3dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10.7dp"
            android:background="@null"
            android:hint="请输入密码"
            android:password="true"
            android:textColor="@color/textcolor3"
            android:textColorHint="#999999"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp"
        android:background="@color/lineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="16dp"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_forpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_corner"
        android:gravity="center"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/tv_reg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/shape_regcorner"
        android:gravity="center"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="113dp"
            android:layout_height="2dp"
            android:background="#EEEEEE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:text="第三方登录"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:layout_width="113dp"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/im_weixin"
                android:layout_width="33.2dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/layout"
                android:src="@drawable/ic_weixin" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/im_qq"
                android:layout_width="33.2dp"
                android:layout_height="28dp"
                android:layout_marginRight="130.8dp"
                android:src="@drawable/ic_qq" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>