<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="84dp"
    android:layout_height="84dp"
    android:layout_marginBottom="4dp">


    <ImageView
        android:visibility="gone"
        android:id="@+id/item_publish_pic_img_occupied"
        android:layout_width="75dp"
        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:padding="24dp"
        android:scaleType="center"
        android:src="@drawable/ic_camera"
       />
    <TextView
        android:id="@+id/item_publish_pic_text_occupied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_publish_pic_img_occupied"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/item_publish_pic_img"
        android:layout_width="75dp"
        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_publish_pic_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_coupon_cancel"
        android:visibility="gone" />

</RelativeLayout>