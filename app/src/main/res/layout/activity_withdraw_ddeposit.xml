<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guo.qlzx.nongji.client.activity.WithdrawDdepositActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:background="@drawable/bg_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="到账银行卡："
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="180dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                tools:text="工商银行（1821）"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="提现金额："
                android:textSize="15sp" />

            <com.guo.qlzx.nongji.client.Costom.AmountEditText
                android:id="@+id/et_cash"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:inputType="number"
                android:digits="1234567890."
                android:hint="请输入提现金额"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:textColor="@color/textcolor3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_transaction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="交易密码："
                android:textSize="15sp" />

            <EditText
                android:inputType="numberPassword"
                android:id="@+id/et_pay"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:background="@color/white"
                android:hint="请输入交易密码"
                android:layout_marginLeft="5dp"
                android:textColor="@color/textcolor3"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/shape_corner"
            android:text="提现"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
